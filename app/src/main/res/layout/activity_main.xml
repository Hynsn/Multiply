<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="Kid's Calculator"
            android:textSize="32sp"
            android:textColor="#ff6501"
            android:fontFamily="sans-serif-thin"/>

    </LinearLayout>
    -->
    <LinearLayout
        android:id="@+id/main_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-thin"
            android:gravity="bottom"
            android:text="Kid's Calculator"
            android:textColor="#ff6501"
            android:textSize="32sp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:text="eQ-3"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#ff6501"
            android:fontFamily="sans-serif-thin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:minHeight="140dp"
            android:gravity="center|left">
            <TextView
                android:id="@+id/first_num_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/man_01"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="20dp"
                android:text="2"
                android:fontFamily="monospace"
                android:textColor="#A020F0"
                android:textSize="48sp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/man_02"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="20dp"
                android:text="×"
                android:textColor="#A020F0"
                android:textSize="54sp"/>
            <TextView
                android:id="@+id/second_num_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/woman_01"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="20dp"
                android:text="2"
                android:textColor="#A020F0"
                android:fontFamily="monospace"
                android:textSize="48sp"/>
            <!-- cursive -->
            <ImageView
                android:layout_width="40dp"
                android:paddingTop="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/green_equal_48px"/>
            <TextView
                android:id="@+id/key_input_tv"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/woman_021"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="30dp"
                android:text="?"
                android:fontFamily="monospace"
                android:textSize="36sp"
                android:textColor="#A020F0"/>
        </LinearLayout>
        <GridLayout
            android:id="@+id/main_key_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:columnCount="3">
            <TextView
                android:id="@+id/counter_time_tv"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text="40s"
                android:fontFamily="monospace"
                android:textColor="#FF7F50"
                android:textSize="36sp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="√="
                    android:textStyle="bold"
                    android:textColor="#228B22"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/right_counter_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#228B22"
                    android:textSize="36sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="×="
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textColor="#E3170D"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/wrong_counter_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textColor="#E3170D"
                    android:textSize="36sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/number1_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key1_selector"
                android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/number2_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key2_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number3_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="2"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key3_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number4_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key4_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number5_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="1"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key5_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number6_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="2"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key6_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number7_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key7_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number8_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="1"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key8_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number9_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="2"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key9_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/number0_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="4"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_key0_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/clear_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="4"
                android:layout_column="1"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_keyd_selector"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/calculate_btn"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="4"
                android:layout_column="2"
                android:gravity="center"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:background="@drawable/main_keyc_selector"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>
        </GridLayout>
    </LinearLayout>

</LinearLayout>