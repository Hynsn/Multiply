<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:paddingLeft="5dp">

    <LinearLayout
        android:id="@+id/record_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/record_id_tv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2"
            android:textSize="24sp"
            android:textColor="#03A89E"/>
        <TextView
            android:id="@+id/total_time_tv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2 * 2"
            android:textSize="24sp"
            android:textColor="#03A89E"/>
        <TextView
            android:id="@+id/ques_qty_tv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5 s"
            android:textSize="24sp"
            android:textColor="#03A89E"/>
        <TextView
            android:id="@+id/score_tv"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="√×"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:textColor="#03A89E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/apple_num0_iv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/apple_48px"/>
        <ImageView
            android:id="@+id/apple_num1_iv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/good_apple_48px" />
        <ImageView
            android:id="@+id/apple_num2_iv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/good_apple_48px"/>
        <ImageView
            android:id="@+id/apple_num3_iv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/good_apple_48px" />
        <ImageView
            android:id="@+id/apple_num4_iv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/good_apple_48px"/>
        <!--
        <ImageView
            android:id="@+id/apple_num5_iv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/good_apple_48px"/>
        <ImageView
            android:id="@+id/apple_num6_iv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bad_apple_48px"/>
        -->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"/>

</LinearLayout>
